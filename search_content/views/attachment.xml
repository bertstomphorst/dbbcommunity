<odoo>
    <!-- Views -->
    <record id="view_attachment_tree" model="ir.ui.view">
        <field name="name">ir.attachment.tree.search_content</field>
        <field name="model">ir.attachment</field>
        <field name="type">tree</field>
        <field name="active">True</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree string="Attachments" edit="False" create="False" delete="False">
                <field name="name"/>
                <field name="sc_model_id"/>
                <field name="res_name"/>
                <field name="file_size"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_attachment_form" model="ir.ui.view">
        <field name="name">ir.attachment.form.search_content</field>
        <field name="model">ir.attachment</field>
        <field name="type">form</field>
        <field name="active">True</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form string="Attachments" edit="False" create="False" delete="False">
               <sheet>
                    <field name="res_model" invisible="True"/>
                    <field name="res_id" invisible="True"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_document" type="object" class="oe_link" icon="fa-file-text-o" invisible="not res_model or res_id == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Open linked item</span>
                            </div>
                        </button>
                    </div>

                    <label for="name"/>
                    <h1 class="d-flex justify-content-between">
                        <field name="name"/><field name="datas"/>
                    </h1>
                    <group>
                        <group string="Attached To" groups="base.group_user">
                            <field name="sc_model_id"/>
                            <field name="sc_reference" string="Record" widget="reference"/>
                            <field name="res_name"/>
                        </group>
                        <group string="History" groups="base.group_user" invisible="not create_date">
                            <label for="create_uid" string="Creation"/>
                            <div name="creation_div">
                                <field name="create_uid" readonly="1" class="oe_inline"/> on
                                <field name="create_date" readonly="1" class="oe_inline"/>
                            </div>
                        </group>
                        <group name="description_group" string="Description" groups="base.group_user" colspan="2">
                            <field name="description" nolabel="1"/>
                        </group>
                        <group groups="base.group_user" string="Indexed Content">
                            <field name="index_content" nolabel="1"/>
                        </group>
                    </group>
                  </sheet>
            </form>
        </field>
    </record>

    <record id="view_attachment_search" model="ir.ui.view">
        <field name="name">ir.attachment.search.search_content</field>
        <field name="model">ir.attachment</field>
        <field name="type">search</field>
        <field name="active">True</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <search string="Attachments">
                <field name="index_content" filter_domain="['|', ('name', 'ilike', self), ('index_content', 'ilike', self)]" string="Attachment (name and content)"/>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="create_uid" string="Created by"/>
                <field name="create_date"/>

                <filter name="my_documents_filter" string="My Document(s)" domain="[('create_uid','=',uid)]" help="Filter on my documents"/>
            </search>
        </field>
    </record>


    <!-- Actions -->
    <record id="action_search_content_attachment" model="ir.actions.act_window">
        <field name="name">Attachments search docs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.attachment</field>
        <field name="domain">[('create_uid', '!=', '1'), ('type', '=', 'binary'), ('res_id', '!=', '0'), ('res_model', '!=', False), ('mimetype', 'not like', 'image/')]</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_ids"
            eval="[(5, 0, 0),
          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_attachment_tree')}),
          (0, 0, {'view_mode': 'form', 'view_id': ref('view_attachment_form')})]"
        />
        <field name="search_view_id" ref="view_attachment_search"/>
    </record>


    <!-- Menu -->
    <menuitem
        id="search_content_attachment"
        name="Attachments"
        action="action_search_content_attachment"
        parent="search_content_root"
        groups="base.group_user,base.group_partner_manager"
        sequence="1"
    />

</odoo>

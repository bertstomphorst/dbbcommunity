<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.app.update.notifier</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="digest.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting name="digest_email_setting_container" position="after">
                <setting
                    help="Send notification when installed modules have newer versions avaliable in the Odoo App Store"
                    name="app_store_update_notifier_setting_container"
                >
                    <field name="modules_update_notif" />
                    <div class="content-group" invisible="not modules_update_notif">
                        <div class="mt16" help="Email address for notifications.">
                            <label
                                for="modules_update_notification_email"
                                class="o_light_label mr8"
                            />
                            <field
                                name="modules_update_notification_email"
                                class="oe_inline"
                                force_save="1"
                            />
                        </div>
                        <div class="mt8">
                            <button
                                type="object"
                                name="open_app_store_update_notifier_template"
                                string="Configure Email Template"
                                icon="fa-arrow-right"
                                class="btn-link"
                            />
                        </div>
                        <div class="mt8">
                            <button
                                type="object"
                                name="open_app_store_update_notifier_cron"
                                string="Configure Cron Job"
                                icon="fa-arrow-right"
                                class="btn-link"
                            />
                        </div>
                    </div>
                </setting>
            </setting>
        </field>
    </record>
</odoo>

<odoo>
    <data>
        <record id="view_partner_form_project_contacts" model="ir.ui.view">
            <field name="name">res.partner.form.project.contacts</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="project.view_task_partner_info_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/button[last()]" position="after">
                    <button name="action_view_project_related"
                            type="object"
                            string="Related projects"
                            class="oe_stat_button"
                            icon="fa-sitemap">
                        <field name="related_project_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

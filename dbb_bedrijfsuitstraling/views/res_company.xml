<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_dbb" model="ir.ui.view">
            <field name="name">res.company.form DBB</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="before">
                    <field name="x_dbb_post_street"/>
                    <field name="x_dbb_post_zip"/>
                    <field name="x_dbb_post_city"/>
                </xpath>

                <xpath expr="//field[@name='mobile']" position="after">
                    <field name="x_dbb_mobile2"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
